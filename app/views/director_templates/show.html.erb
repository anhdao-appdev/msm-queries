<h1>
  Director #<%=@the_director.id%> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%=@the_director.id%>" class="btn btn-block btn-outline-secondary">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_director.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_director.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_director.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@the_director.image%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_director.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_director.updated_at)%> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>
  
    <% @filmography.each do |movie| %>
        <tr>
            <td>
                <%= movie.id %>
            </td>
             <td>
                <img src="<%= movie.image %>">
            </td>
            <td>
                <%= movie.title %>
            </td>
            <td>
                <%= movie.year %>
            </td>
            <td>
                <%= Director.where({:id=>movie.director_id})[0].name %>
            </td>
            <td>
                <a href="/movies/<%= movie.id %>"> Show details </a>
            </td>
        </tr>
    <% end %>
</table>